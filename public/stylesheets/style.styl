@import "base.styl";

@import "chrome.scrollbar.styl";

body
	background:#efefef;
	font-family:Georgia,"Times New Roman", "Hiragino Mincho Pro", "Songti SC", "SimSun", sans-serif;
	letter-spacing: 0.1em;
a
	color: #666

.lang-en
	font-family:Helvetica, Arial;

#wallpapers .bg{
	position: fixed;
	z-index: 1;
	left: 0px;
	top: 0px;
	width: 100%;
	height: 100%;
	overflow: hidden;
	background-size: cover;
	background-position: center center;
}

#wallpapers .mask{
	background:url('/images/mask.png') repeat left top;
	position: fixed;
	z-index: 2;
	left: 0px;
	top: 0px;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

#header{
	position: fixed; left:0; top:0; z-index:100;
	width:100%; background: rgba(255,255,255,.6);
	border-radius: 0 0 0 5px;
	box-shadow: 1px 1px 1px rgba(0,0,0,.3);
}

#header .hleft{
	margin-right:50px;
}

#header .hbox{
	min-width:320px;
	max-width:1000px; margin:0 auto;
}

#header .hbox > div{
	float:left; height:40px; line-height:40px;
}

#header .hbox .hright{
	float:right;
}

#header .hbox .hright a{
	margin-left:10px;
}

#header:hover{
	background: rgba(255,255,255,.8);
}

#header .nav li{
	float:left; overflow:hidden;
}

#header .nav li a{
	display:inline-block; padding:0 20px;
}

#header .nav li .active{
	background:rgba(255,255,255,.5);
}

#container{
	min-width:320px;
	max-width:1000px; margin:0 auto;
	position: relative; z-index:10; top:100px;
	padding-bottom:100px;
	overflow:hidden;
}

.content{
	background:#fff;
	padding:20px;
	border-radius: 5px;
	box-shadow: 1px 1px 1px rgba(0,0,0,.3);
}


.indexIntro li{
	margin-bottom:20px;
}

.indexIntro .info-nickname,
.indexIntro .info-like,
.indexIntro .info-constellation,
.indexIntro .info-motto{
	color:#666; padding:5px 10px;
	background:#efefef;
	border-radius: 5px;
}

.indexIntro .info-pic{
	float:left;
	padding:5px 10px;
}

.indexIntro .info-pic,
.indexIntro .info-pic img{
	margin:0 auto;
	width:120px; height:120px;
	background:transparent;
	border-radius: 50%;
}

.indexIntro .info-pic img{
	opacity:1;
	transition: 0.5s;
}

.indexIntro .info-pic img:hover{
	opacity:.6;
}



.indexIntro .info-like{
	color:#969696;
}

.indexIntro .info-sns{
	display: inline-block;
	width: 50px;
	height: 50px;
	margin-right: 20px;
	background-image: url("/images/sns_skin.png");
	outline: none;
}

.indexIntro .info-sns span{
	display: block;
	width: 50px;
	height:50px;
	background-image: url("/images/sns_skin.png");
	transition: 0.16s;
	text-indent: -999px;
	overflow: hidden;
	opacity: 0;
	//filter:alpha(opacity=0);
}

.indexIntro .info-sns:hover span{
	opacity:0.6;
	//filter:alpha(opacity=60);
}
.indexIntro .info-sns:active span{
	opacity:1;
	//filter:alpha(opacity=100);
	transition: 0.1s;
}

.indexIntro .info-qq{
	background-position: 0px 0px;
}

.indexIntro .info-qq span{background-position:0px -50px;}

.indexIntro .info-weibo{background-position: -50px 0px;}

.indexIntro .info-weibo span{background-position:-50px -50px;}

.indexIntro .info-google{background-position: -100px 0px;}

.indexIntro .info-google span{background-position:-100px -50px;}

.indexIntro .info-facebook{display:none; background-position: -150px 0px;}

.indexIntro .info-facebook span{background-position:-150px -50px;}

//feedback
.feedback .comment .title{margin-bottom:10px; font-weight:700;}

//blog detail page
.bl-detail {margin-bottom:10px;}
.bl-detail .bl-title{text-align:center; font-size:22px; font-family: "微软雅黑","黑体"; font-weight:normal; border-bottom:1px dashed #bababa; margin:0 0 10px; padding:0 0 10px;}
.bl-detail .bl-content{
	line-height:2;
}

.bl-detail .bl-content p{
	text-indent:2em;
}

//opus

.photo-demo img {
  background: url("../img/loading.gif") no-repeat 50% 50%;
}

.photo-demo img[src$="png"] {
  background: none;
}

.banner,.photo-box{width:16rem; margin:0 auto; overflow:hidden;}
.banner img{width:100%; height:auto;}

.photo-list li{
	background:#FFFFFF;
	padding:0.5rem;
	width:6.8rem;
	margin:.4rem .4rem 0 0;
	float:left;
	position:relative;
}

.photo-list li:nth-child(2n+2){
	margin-right:0;
}

.photo-list img{
	width:100%; height:auto;
}

.photo-list li span:last-child{
	display:inline-block; background:rgba(255,255,255,.5);
	position:absolute; right: .5rem; bottom:.5rem; z-index:1000;
	padding:3px 5px;
	border-radius:5px 0 0 0; color:#000;
}
.photo-list li:hover span:last-child{
	background:rgba(255,255,255,.8);
};

.photo-list a:link, .photo-list a:visited {
  color: #515151;
}

//grid
.main{
	background:#fff;
	border-radius: 5px;
	box-shadow: 1px 1px 1px rgba(0,0,0,.3);
	float:left; width:660px;
}

.bl-detail{
	padding:20px;
}

.sidebar{
	background:#fff; 
	border-radius: 5px;
	box-shadow: 1px 1px 1px rgba(0,0,0,.3);
	float:right; width:300px; 
}

.sidebar .weibo{
	padding:20px 10px;
}

//share

.share{
	width:960px; margin:0 auto; overflow:hidden;
}

.share .list{
	width:990px; overflow:hidden;
}
.share .list li{
	width:300px; height:200px; background:rgba(255,255,255,.3);
	text-align:center; line-height:300px;
	float:left; margin:0 30px 20px 0;
}

.share .list img{
	width:300px; vertical-align:top; opacity:0.7;
}

.share .list img:hover{
	opacity:1;
}

@media all and (min-width : 320px) and (max-width : 480px) {
	.hright{display:none;}
	.share,.share .list{width:auto;}
	.share .list li{margin:0 auto 10px auto; float:none;}
}